<?xml version="1.0" encoding="UTF-8"?>
<decorators defaultdir="/decorators">
	<excludes>
		<pattern>/api*</pattern>
		<pattern>/login*</pattern>
		<pattern>/register*</pattern>
		<pattern>/forgetpass*</pattern>
	</excludes>

	<!-- apply Sitemesh default template -->
	<decorator name="admin" page="admin.jsp">
		<pattern>/admin*</pattern>
	</decorator>
	<decorator name="admin2" page="admin2.jsp">
		<pattern>/admin2*</pattern>
	</decorator>
	<decorator name="seller" page="seller.jsp">
		<pattern>/seller*</pattern>
	</decorator>
	<decorator name="web" page="web.jsp">
		<pattern>/*</pattern>
	</decorator>
</decorators>
